# Paid football API (Liga Argentina) - API-SPORTS naming
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io
API_FOOTBALL_KEY=your_api_key_here
API_FOOTBALL_DEFAULT_SEASON=2026

# PocketBase (Milestone 3)
# Recommended (server-side canonical):
POCKETBASE_URL=https://pb.fulbitoprode.com
# Backward-compatible aliases supported by the app:
# PB_URL=https://pb.fulbitoprode.com
# NEXT_PUBLIC_PB_URL=https://pb.fulbitoprode.com

# Session signing secret (required for auth cookie verification)
SESSION_SECRET=change_me_to_a_long_random_secret
HEALTHCHECK_TOKEN=optional_healthcheck_token

# Optional
NEXT_PUBLIC_APP_URL=https://app.fulbitoprode.com
API_FOOTBALL_KEY_HEADER=x-apisports-key
API_FOOTBALL_FIXTURES_PATH=/fixtures
API_FOOTBALL_FIXTURE_ROUNDS_PATH=/fixtures/rounds
API_FOOTBALL_LEAGUES_PATH=/leagues
API_FOOTBALL_STANDINGS_PATH=/standings
API_FOOTBALL_ARG_LEAGUE_ID=128
API_FOOTBALL_ARG_TIMEZONE=America/Argentina/Buenos_Aires
API_FOOTBALL_ALLOWED_LEAGUES=128,39
# API_FOOTBALL_FECHA14_ROUND=Regular Season - 14
# API_FOOTBALL_FECHA15_ROUND=Regular Season - 15

# Backward-compatible aliases also supported:
# FOOTBALL_API_BASE_URL=
# FOOTBALL_API_KEY=
# FOOTBALL_API_FIXTURE_ROUNDS_PATH=
# FOOTBALL_API_LEAGUES_PATH=
