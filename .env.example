# Paid football API (Liga Argentina)
FOOTBALL_API_BASE_URL=https://api-football-v1.p.rapidapi.com/v3
FOOTBALL_API_KEY=your_api_key_here

# Optional header names/provider host (RapidAPI defaults)
FOOTBALL_API_KEY_HEADER=x-rapidapi-key
FOOTBALL_API_HOST=api-football-v1.p.rapidapi.com
FOOTBALL_API_HOST_HEADER=x-rapidapi-host

# Optional path and competition config
FOOTBALL_API_FIXTURES_PATH=/fixtures
FOOTBALL_API_ARG_LEAGUE_ID=128
FOOTBALL_API_ARG_SEASON=2026
FOOTBALL_API_ARG_TIMEZONE=America/Argentina/Buenos_Aires

# Optional explicit round mapping for each UI period
# FOOTBALL_API_FECHA14_ROUND=Regular Season - 14
# FOOTBALL_API_FECHA15_ROUND=Regular Season - 15
